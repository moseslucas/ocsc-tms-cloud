- unless smart_listing.empty?
  %table.table.table-striped
    %thead
      %th= smart_listing.sortable "Name", :name
      %th Balance
      %th
    %tbody
      - smart_listing.collection.each do |o|
        %tr
          = smart_listing.render object: o, partial: "collection_by_clients/record", locals: {o: o}
  = smart_listing.paginate
  = smart_listing.pagination_per_page_links
- else
  %h1.text-center No Records Found
  %h1.text-center= image_tag "search2.gif", class: "no-records-found"
