- provide :title, "Collection By Clients"

.page-content-inner
  .row
    .col-xs-12
      .portlet.light.portlet-fit
        .portlet-body
          = smart_listing_controls_for(:clients, {class: "form-inline text-right"}) do
            .form-group.filter.input-append
              = text_field_tag :filter, '', class: "search form-control", placeholder: "Search Name . . .", autocomplete: :off
          = smart_listing_render :clients
