- provide :title, "Collection By Clients"

.page-content-inner
  .row
    .col-xs-12
      .portlet.light.portlet-fit
        .portlet-body
          = smart_listing_controls_for(:collections, {class: "form-inline text-right"}) do
            .checkbox
              %label.checkbox.inline
                = hidden_field_tag :closed_payments, "1"
                = check_box_tag :closed_payments, "2"
                = "Closed Payments"
            .checkbox
            .form-group.filter.input-append
              = text_field_tag :filter, '', class: "search form-control", 
                                        placeholder: "Search...", autocomplete: :off
          = smart_listing_render :collections
