- provide :title, "Bill of Ladding"
- if @doc
  %input#id{:type => "hidden", :value => "#{@doc['id']}"}/
  - if @doc.status1==0
    .no-print.alert.alert-danger{:id => "status_deleted "}
      %strong Cancelled Record
      This record has been already cancelled
  .row
    .col-xs-4
      %h3 Details:
      %ul.list-unstyled
        %li
          %strong Trip Code :
          = @doc.ref_id
        %li
          %strong Date :
          = @doc.trans_date
        %li.status1
          %strong Payment Status:
          = status1_meaning @doc.status1
        %li.status2
          %strong Delivery Status:
          = status2_meaning @doc.status2
    .col-xs-4
      %h3 Locations:
      %ul.list-unstyled
        %strong Source:
        %span.muted
          = @doc.source.name
      %ul.list-unstyled
        %strong Destination:
        %span.muted
          = @doc.destination.name
    .col-xs-4
      %h3 Remarks:
      %ul.list-unstyled
        %li
          %strong{class: @doc.description == "ARRIVED AT STATION" ? "text-success" : "text-warning"} Description :
          = @doc.description
  %hr/
  .row
    .col-xs-12
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th #
            %th CWB
            %th Shipper
            %th Consignee
            / <th> Tags </th>
            %th QTY
            %th Description
            %th Destination
            %th Amount
        %tbody
          - i=1
          - sub_total=0
          - @doc.document_details.each do |c|
            %tr
              %td
                = i
              %td
                = c.document_shipping.ref_id
              %td
                = c.document_shipping.shipper
              %td
                = c.document_shipping.client.name
              / <td> <haml_silent></haml_silent> </td>
              %td
                = c.document_shipping.document_details.sum(:qty)
              %td
                = c.document_shipping.document_details.first.description
              %td
                = c.document_shipping.destination.name
              %td
                = number_with_delimiter sprintf '%.2f', c.document_shipping.total_amount, delimiter:','
            - i+=1
