- else
  .row
    .center
      %h1.text-center.text-muted No Matching Record
    .col-md-2
    .col-md-2.col-sm-2.col-xs-0
      = image_tag("nofile.png", :class=>"nofile", draggable:false)
    .col-md-6.col-sm-10.col-xs-12
